{
  "$schema": "http://json.schemastore.org/template",
  "author": "Juego Studios",
  "classifications": [
    "Web",
    "WebAPI"
  ],
  "name": "JuegoFramework.ProjectTemplate",
  "generatorVersions": "[1.0.0.0-*)",
  "description": "Project template for JuegoFramework",
  "identity": "JuegoFramework.ProjectTemplate",
  "shortName": "juegoframework-project",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "ProjectName",
  "preferNameDirectory": true,
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".template.config/**"
      ],
      "copyOnly": [
        "wwwroot/**"
      ],
      "modifiers": [
        {
          "condition": "(!DbTypeMongo)",
          "exclude": [
            "Library/MongoLib/**"
          ]
        },
        {
          "condition": "(!DbTypeMySql)",
          "exclude": [
            "Library/SqlLib/**",
            "Migration/**",
            "Library/UtilityLib/MySqlDateTimeHandler.cs"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "dbType": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "MySql",
          "description": "MySql Database"
        },
        {
          "choice": "Mongo",
          "description": "MongoDB"
        },
        {
          "choice": "None",
          "description": "None"
        }
      ],
      "defaultValue": "MySql",
      "description": "The type of Database to use"
    },
    "DbTypeMySql": {
      "type": "computed",
      "value": "(dbType == \"MySql\")"
    },
    "DbTypeMongo": {
      "type": "computed",
      "value": "(dbType == \"Mongo\")"
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    }
  },
  "primaryOutputs": [
    {
      "path": "ProjectName.csproj"
    }
  ],
  "postActions": [
    {
      "id": "restore",
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}
